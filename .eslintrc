{
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "valid-jsdoc": [2, {
      "prefer": {
        "return": "returns"
      },
      "requireReturn": false,
      "requireParamDescription": false
    }],

    "block-scoped-var": 2,
    "guard-for-in": 2,
    "radix": 2,
    "wrap-iife": [2, "inside"],
    "yoda": [2, "never"],

    "strict": [2, "global"],

    "no-undefined": 2,
    "no-use-before-define": [2, "nofunc"],

    "array-bracket-spacing": [2, "never"],
    "brace-style": [2, "1tbs"],
    "camelcase": [2, {"properties": "never"}],
    "consistent-this": [2, "that"],
    "quotes": [2, "single"],
    "no-trailing-spaces": 2,
    "object-curly-spacing": [2, "never"],
    "space-after-keywords": [2, "always"],
    "space-unary-ops": 2
  }
}
