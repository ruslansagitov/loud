{
  "name": "loud",
  "version": "0.8.3",
  "description": "Web accessibility testing helper",
  "keywords": [
    "accessibility",
    "a11y",
    "test",
    "testing",
    "unit-tests"
  ],
  "author": "Ruslan Sagitov <rs@ruslansagitov.name>",
  "license": "MIT",
  "homepage": "https://github.com/ruslansagitov/loud",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruslansagitov/loud.git"
  },
  "bugs": {
    "url": "https://github.com/ruslansagitov/loud/issues",
    "email": "rs@ruslansagitov.name"
  },
  "main": "lib/loud.js",
  "directories": {
    "lib": "./lib"
  },
  "scripts": {
    "test": "npm run-script lint && npm run-script check-writing && npm run-script security && npm run-script node-test && npm run-script karma-test",
    "node-test": "mocha --reporter=dot",
    "node-test-xunit": "mocha --reporter=xunit -O output=xunit-results.xml",
    "karma-test": "karma start --single-run",
    "lint": "eslint . && jscs .",
    "check-writing": "write-good README.md && write-good CONTRIBUTING.md --no-tooWordy",
    "security": "nsp check",
    "coverage": "istanbul cover _mocha -- --reporter=dot",
    "doc": "sphinx-build -b html doc/ build/doc/",
    "jsdoc": "jsdoc -d jsdoc lib/loud.js README.md",
    "build": "npm run-script browserify && npm run-script browserify-tests",
    "browserify": "browserify --standalone loud -o ./dist/loud.js ./lib/loud.js",
    "browserify-tests": "browserify -x jsdom -o ./build/test.js ./test/test.js"
  },
  "dependencies": {},
  "devDependencies": {
    "benchmark": "^1.0.0",
    "browserify": "^12.0.1",
    "es5-shim": "^4.4.1",
    "html5shiv": "^3.7.3",
    "istanbul": "^0.4.1",
    "jsdom": "^7.2.1",
    "karma": "0.13.15",
    "karma-mocha": "^0.2.1",
    "mocha": "^2.3.4"
  },
  "engines": {
    "node": ">= 4.0.0"
  }
}
