{
  "name": "loud",
  "version": "0.7.2",
  "description": "Web accessibility unit-testing framework",
  "keywords": [
    "accessibility",
    "a11y",
    "test",
    "testing",
    "unit-tests"
  ],
  "author": "Ruslan Sagitov <rs@ruslansagitov.name>",
  "license": "MIT",
  "homepage": "https://github.com/ruslansagitov/loud",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruslansagitov/loud.git"
  },
  "bugs": {
    "url": "https://github.com/ruslansagitov/loud/issues",
    "email": "rs@ruslansagitov.name"
  },
  "main": "lib/loud.js",
  "directories": {
    "lib": "./lib"
  },
  "bin": {
    "loud": "./lib/cli.js"
  },
  "scripts": {
    "test": "npm run-script lint && npm run-script node-test && npm run-script karma-test",
    "node-test": "istanbul test _mocha -- --reporter=dot ./test/test.js",
    "karma-test": "karma start --single-run",
    "lint": "eslint lib/ test/ && jscs lib/ test/",
    "build": "npm run-script browserify && npm run-script browserify-tests",
    "browserify": "browserify --standalone Loud -x jsdom -o ./dist/loud.js ./lib/loud.js",
    "browserify-tests": "mkdir -p build && browserify -x jsdom -o ./build/test.js ./test/test.js",
    "benchmark": "node test/benchmark.js",
    "jsdoc": "jsdoc -d ./jsdoc/ ./lib/loud.js ./README.md",
    "clean": "rm -rf ./build/ ./coverage/ ./jsdoc/ npm-debug.log"
  },
  "dependencies": {
    "jsdom": "^0.11.1",
    "optimist": "^0.6.1"
  },
  "devDependencies": {
    "benchmark": "^1.0.0",
    "browserify": "^5.9.1",
    "istanbul": "^0.3.0",
    "karma": "^0.12.19",
    "karma-cli": "^0.0.4",
    "karma-firefox-launcher": "^0.1.3",
    "karma-mocha": "^0.1.6",
    "karma-phantomjs-launcher": "^0.1.4",
    "mocha": "^1.21.3"
  },
  "engines": {
    "node": ">= 0.10.0"
  }
}
